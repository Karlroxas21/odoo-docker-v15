
<odoo>

    <record id="real_estate_action" model="ir.actions.act_window">
        <field name="name">Real Estate View</field>
        <field name="res_model">real.estate.karl</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Real Estate Property
          </p><p>
            Create new real estate
          </p><p>
            Some examples: "Bahay na malupet", "Price too high"
          </p>
        </field>
    </record>

<!-- Display trees  -->
    <record id="real_estate_view_tree" model="ir.ui.view">
      <field name="name">real.estate.karl.tree</field>
      <field name="model">real.estate.karl</field>
      <field name="arch" type="xml">
        <tree string="Channel">

          <field name="name"/>
          <field name="state"/>
          <field name="best_offer"/>
          <field name="total_area"/>
          <field name="tag_ids" widget="many2many_tags"/>
          <field name="property_type_id"/>
          <field name="postcode"/>
          <field name="bedrooms"/>
          <field name="living_area"/>
          <field name="expected_price"/>
          <field name="selling_price"/>
          <field name="date_availability"/>

        </tree>
      </field>
    </record>

    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">real.estate.karl.form</field>
        <field name="model">real.estate.karl</field>
        <field name="arch" type="xml">
            <form string="Real Estate">
            <header>
              <button name="sold_action" type="object" string="SOLD"></button>
              <button name="cancel_action" type="object" string="CANCEL"></button>
            </header>
                <sheet>
                <h3>Property Type: <field name="property_type_id"/> </h3>
                <h3>Tag: <field name="tag_ids" widget="many2many_tags"/> </h3>
                <group>
                  <group>
                    <field string="Status: " name="state"/>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                  </group>

                  <group>
                    <field string="Available from: " name="date_availability"/>
                    <field name="selling_price"/>
                    <field name="best_offer"/>
                  </group>
                </group>
                        
                        <notebook>
                            <page string="Description">
                                <group>
                                  <field name="description"/> 
                                  <field name="bedrooms"/> 
                                  <field string="Living Area (sqm)" name="living_area"/> 
                                  <field name="facades"/> 
                                  <field name="garage"/> 
                                  <field name="garden"/> 
                                  <field string="Garden Area (sqm)" name="garden_area"/>
                                  <field name="total_area"/>
                                  <field name="garden_orientation"/>  
                                  <field name="active"/>
                                </group> 
                            </page>

                            <page string="Offers">
                                <field name="offer_ids">
                                  <tree>
                                    <field name="price"/>
                                    <field name="date_deadline"/>
                                    <field name="validity"/>
                                    <field name="partner_id"/>
                                    <button name="accept_action" string="Accept" type="object" icon="fa-check"/>
                                    <button name="refuse_action" string="Refuse" type="object" icon="fa-times"/>

                                    <field name="status" />
                                  </tree>
                                  <form>
                                    <group>
                                      <field name="price"/>
                                      <field name="date_deadline"/>
                                      <field name="validity"/>
                                      <field name="partner_id"/>
                                    </group>
                                  </form>
                                </field>
                            </page>

                            <page string="Other info">
                              <group>
                                <field string="Buyer" name="buyer"/>
                                <field string="Sales Person" name="sales_person"/>
                              </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- Search -->
 <record id="real_estate_search" model="ir.ui.view">
    <field name="name">real.estate.karl.search</field>
    <field name="model">real.estate.karl</field>
    <field name="arch" type="xml">
        <search string="Search">
            <field name="name"/>
            <field name="property_type_id"/>
            <field name="postcode"/>
            <group expand="1" string="By postcode">
              <filter string="By postcode" name="postcode" context="{'group_by':'postcode'}"/>
            </group>
            <field name="expected_price"/>
            <field name="selling_price"/>
            <!-- <filter string="Low Price" name="low_price" domain="[('selling_price', '<', 1000000)]"/> -->
            <!-- <groupby string="By Bedrooms" name="bedrooms" context='{group_by}': 'bedrooms'/> -->
            <field name="bedrooms"/>
            <!-- <seperator/> -->
            <filter string="More than 1 bedroom" name="bedrooms" domain="[('bedrooms', '>', 1)]"/>
           
            <field name="living_area"/>
            <field name="facades"/>
            <field name="state"/>
            <group expand="1" string="By state">
              <filter string="By state" name="state" context="{'group_by':'state'}"/>
            </group>
        </search>
    </field>

</record>

</odoo>